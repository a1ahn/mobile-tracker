<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp">


    <android.support.constraint.ConstraintLayout
            android:id="@+id/item_block_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/drawable_block"
                android:id="@+id/item_block_box_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <TextView
                android:text="123456"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_transaction_from_textview"
                app:layout_constraintBottom_toBottomOf="@+id/item_block_box_img"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/item_block_box_img"
                app:layout_constraintStart_toStartOf="@+id/item_block_box_img"
                android:layout_marginBottom="4dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/item_transaction_txhash"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="01523456"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical|start"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="Hash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/item_block_box_img"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/item_transaction_txhash"
                android:layout_marginTop="4dp"
                app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
                android:text="Block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/item_block_box_img"
                app:layout_constraintStart_toStartOf="@+id/item_block_box_img"
                app:layout_constraintBottom_toTopOf="@+id/item_transaction_from_textview"
                app:layout_constraintVertical_chainStyle="packed"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="@+id/item_block_box_img"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>