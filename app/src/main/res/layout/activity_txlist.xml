<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.TxListActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/transaction_top_textview"
            android:visibility="visible"
            tools:text="총 1개의 트랜잭션이 존재합니다."/>

    <include
            android:id="@+id/transaction_loading"
            android:layout_width="0dp"
            android:layout_height="0dp"
            layout="@layout/loading"
            app:layout_constraintEnd_toEndOf="@+id/transaction_recyclerview"
            app:layout_constraintStart_toStartOf="@+id/transaction_recyclerview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/transaction_recyclerview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/transaction_top_textview">

    </android.support.v7.widget.RecyclerView>
    
</android.support.constraint.ConstraintLayout>